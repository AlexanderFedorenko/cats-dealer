<div class="row">
  <div class="col-md-2 col-md-offset-5">
    <%= form_tag(request_path, method: 'post', class: 'form-horizontal center') do %>
        <p>
          <%= t('form.cat_type_select') %>:<br/>
          <%= select_tag('cats_type', options_for_select(%w(Bengal Abyssin Persian))) %>
        </p>
        <p>
          <%= t('form.location_select') %>:<br/>
          <%= select_tag('user_location', options_for_select(%w(Lviv Kiev Odessa))) %>
        </p>
        <div><%= submit_tag t('form.submit'), class: 'btn btn-default' %></div>
    <% end %>
  </div>
</div>
<br>
