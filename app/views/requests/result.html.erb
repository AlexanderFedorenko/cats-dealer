<% if @cats_list&.any? %>
<p>
  <%= t('results.best_price') %>
- <%= @cats_list.sort_by { |list| list[:cat][:price] }.first[:cat]['price'] %>
</p>

<table class=" table table-striped">
  <thead>
  <tr>
    <th>Type</th>
    <th>Price</th>
    <th>Location</th>
    <th>Image</th>
  </tr>
  </thead>

  <tbody>
  <% @cats_list.each do |cat| %>
      <%- cat = CatsPresenter.new(cat[:cat]) %>
      <tr>
        <td><%= cat.type %></td>
        <td><%= cat.price %></td>
        <td><%= cat.location %></td>
        <td><%= image_tag(cat.image, width: '150px') %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<% else %>
  <p>
    <%= t('results.no_results') %>
  </p>
<% end %>